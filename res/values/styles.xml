<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="appColorFirst">@color/light</item>
        <item name="appColorFirstDark">@color/lightDark</item>
        <item name="appColorFirstTranslucent">@color/lightTranslucent</item>
        <item name="appColorSecondary">@color/accent</item>
        <item name="appColorSecondaryDark">@color/accentDark</item>

        <item name="colorPrimary">?attr/appColorFirstTranslucent</item>
        <item name="colorPrimaryDark">?attr/appColorFirstTranslucent</item>
        <item name="colorAccent">?attr/appColorSecondary</item>

        <item name="android:textViewStyle">@style/NormalText</item>

        <item name="android:colorBackground">?attr/appColorFirst</item>
       <!-- <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:statusBarColor">?attr/appColorFirstTranslucent</item>
        <item name="android:navigationBarColor">?attr/appColorFirstTranslucent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>

       <!-- <item name="android:scrollbars">none</item>-->
    </style>

    <style name="Logo">
        <item name="android:layout_width">@dimen/length_logo</item>
        <item name="android:layout_height">@dimen/length_logo</item>
    </style>

    <style name="AllClickable">
        <item name="android:minWidth">@dimen/length_minimal</item>
        <item name="android:minHeight">@dimen/length_minimal</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="ClickableImages" parent="AllClickable">
        <item name="android:layout_width">@dimen/length_minimal</item>
        <item name="android:layout_height">@dimen/length_minimal</item>
        <item name="android:padding">@dimen/padding_clickable_image</item>
        <item name="android:tint">?attr/appColorSecondary</item>
    </style>

    <style name="ClickableImages.Negative">
        <item name="android:tint">?attr/appColorFirst</item>
    </style>

    <style name="ClickableImages.G">
        <item name="android:tint">@color/gWhite</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">?attr/appColorSecondary</item>
        <item name="android:textSize">@dimen/size_text_normal</item>
    </style>

    <style name="NormalText.Negative">
        <item name="android:textColor">?attr/appColorFirst</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/size_text_title</item>
    </style>

    <style name="TitleText.Negative">
        <item name="android:textColor">?attr/appColorFirst</item>
    </style>

    <style name="TitleText.G">
        <item name="android:textColor">@color/gWhite</item>
    </style>

    <style name="NavigationTitleText">
        <item name="android:textColorSecondary">?attr/appColorSecondaryDark</item>
    </style>

    <style name="Button">
        <item name="android:textColor">?attr/appColorFirst</item>
        <item name="android:backgroundTint">?attr/appColorSecondaryDark</item>
    </style>

    <style name="Button.Negative">
        <item name="android:textColor">?attr/appColorSecondary</item>
        <item name="android:backgroundTint">?attr/appColorFirstDark</item>
    </style>
</resources>
