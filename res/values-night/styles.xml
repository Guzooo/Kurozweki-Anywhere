<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.HardDarkMode">
        <item name="colorPrimaryG">@color/hardDark</item>
        <item name="colorPrimaryDarkG">@color/dark</item>
        <item name="colorPrimaryTranslucentG">@color/hardDarkTranslucent</item>
        <item name="colorSecondaryG">@color/darkDark</item>
        <item name="colorSecondaryDarkG">@color/dark</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryG">@color/dark</item>
        <item name="colorPrimaryDarkG">@color/darkDark</item>
        <item name="colorPrimaryTranslucentG">@color/darkTranslucent</item>
        <item name="colorSecondaryG">@color/light</item>
        <item name="colorSecondaryDarkG">@color/lightDark</item>
        <item name="colorAccentG">@color/accent</item>
        <item name="appColorSecondaryDark">@color/accentDark</item>

        <item name="colorPrimary">?attr/colorPrimaryTranslucentG</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryTranslucentG</item>
        <item name="colorAccent">?attr/colorAccentG</item>

        <item name="android:textViewStyle">@style/NormalText</item>

        <item name="android:colorBackground">?attr/colorPrimaryG</item>
        <!-- <item name="android:fitsSystemWindows">true</item>-->

        <!-- <item name="android:fitsSystemWindows">true</item>-->
        <item name="android:statusBarColor">?attr/colorPrimaryTranslucentG</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryTranslucentG</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionBar">false</item>

        <!-- <item name="android:scrollbars">none</item>-->

        <item name="preferenceTheme">@style/AppTheme.PreferenceTheme</item>
    </style>
</resources>