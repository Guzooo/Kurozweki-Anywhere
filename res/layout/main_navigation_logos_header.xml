<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorGAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo_g"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/padding_top"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintBottom_toTopOf="@id/center"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_stud"
        android:layout_marginBottom="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintEnd_toStartOf="@id/center"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_brewery"
        android:layout_marginBottom="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintStart_toEndOf="@id/center"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_palace"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/padding_top"
        app:layout_constraintStart_toEndOf="@id/center"
        app:layout_constraintBottom_toTopOf="@id/center"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintEnd_toEndOf="@id/padding_start"
        app:layout_constraintRight_toRightOf="@id/padding_start"
        app:layout_constraintTop_toBottomOf="parent"
        style="@style/ClickableImage.ColorPrimary"/>

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/notification_icon"
        app:layout_constraintEnd_toStartOf="@id/refresh_icon"
        app:layout_constraintTop_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/refresh_icon"
        android:layout_margin="@dimen/margin_standard"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        style="@style/ClickableImage.ColorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>