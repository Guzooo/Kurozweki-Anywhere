<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorGAccent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Space
        android:id="@+id/center"
        android:layout_width="@dimen/margin_standard"
        android:layout_height="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Space
        android:id="@+id/logo_left_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/logo_palace"/>

    <ImageView
        android:id="@+id/logo_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_g"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_stud"
        app:layout_constraintEnd_toStartOf="@id/logo_left_space"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_stud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_stud"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/logo_brewery"
        app:layout_constraintEnd_toEndOf="@id/logo_g"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_brewery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_brewery"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/logo_palace"
        app:layout_constraintEnd_toEndOf="@id/logo_stud"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/logo_palace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_palace"
        android:layout_marginTop="@dimen/margin_standard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/logo_right_space"
        app:layout_constraintEnd_toStartOf="@id/logo_brewery"
        style="@style/Logo"/>

    <Space
        android:id="@+id/logo_right_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/logo_g"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/logos_header_trigger"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="@+id/logo_g"
        app:layout_constraintStart_toStartOf="@+id/logo_g"
        app:layout_constraintEnd_toEndOf="@id/logo_palace"
        app:layout_constraintBottom_toBottomOf="@id/logo_g"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_standard"
        android:layout_marginBottom="@dimen/margin_standard"
        app:layout_constraintTop_toBottomOf="@id/logo_g"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/logo_g"
        android:visibility="invisible"
        style="@style/Logo"/>

    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:src="@drawable/ic_delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_g"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ClickableImage.ColorPrimary"/>

    <TextView
        android:id="@+id/version_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v.1.2.B6\n25.01.2022 15:19"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/notification_icon"
        app:layout_constraintEnd_toStartOf="@id/refresh_icon"
        app:layout_constraintTop_toBottomOf="@id/logo_g"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/TextNormal.ColorPrimary"/>

    <ImageView
        android:id="@+id/refresh_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_standard"
        android:src="@drawable/ic_done"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_g"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/ClickableImage.ColorPrimary"/>

    <pl.Guzooo.Base.Elements.BusinessCardG
        android:id="@+id/business_card_g"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <pl.Guzooo.Base.Elements.BusinessCard
        android:id="@+id/business_card_stud"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:background="@color/stud"
        app:socials="@menu/business_card_guzooo"
        app:title="Stadnina Koni"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <pl.Guzooo.Base.Elements.BusinessCard
        android:id="@+id/business_card_brewery"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:background="@color/brewery"
        app:socials="@menu/business_card_guzooo"
        app:title="Browar Popiel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <pl.Guzooo.Base.Elements.BusinessCard
        android:id="@+id/business_card_palace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:background="@color/palace"
        app:foreground="?attr/colorGPrimary"
        app:socials="@menu/business_card_guzooo"
        app:title="Pałac w Kurozwękach"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
